<div class="card" style="border-radius: 15px;">
        <div class="card-body p-5">
        @if(Titre!=null)
        {
            <h6 class="mb-3">@Titre</h6>
        }
        @if(Contenu != null)
        {
            @Contenu
        }
    </div>
</div>

@code {
    // https://docs.microsoft.com/fr-fr/aspnet/core/blazor/components/templated-components?view=aspnetcore-6.0

    [Parameter]
    public string? Titre { get; set; }

    [Parameter]
    public RenderFragment? Contenu { get; set; }
}
